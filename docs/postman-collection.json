{
  "info": {
    "name": "Excel GPT Middleware API",
    "description": "Postman collection aligned to names-only endpoints with optional per-request SharePoint site overrides.",
    "version": "1.0.1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": { "type": "noauth" },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000", "type": "string" },
    { "key": "siteUrl", "value": "https://yourtenant.sharepoint.com/sites/YourSite", "type": "string" },
    { "key": "siteId", "value": "", "type": "string" },
    { "key": "driveName", "value": "Documents", "type": "string" },
    { "key": "itemName", "value": "TestWorkbook.xlsx", "type": "string" },
    { "key": "sheetName", "value": "Sheet1", "type": "string" }
  ],
  "item": [
    {
      "name": "Health",
      "request": { "method": "GET", "url": "{{baseUrl}}/health" }
    },
    {
      "name": "List Drives",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/list-drives?siteUrl={{siteUrl}}",
          "host": ["{{baseUrl}}"],
          "path": ["list-drives"],
          "query": [ { "key": "siteUrl", "value": "{{siteUrl}}" } ]
        }
      }
    },
    {
      "name": "List Items",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/list-items?driveName={{driveName}}&siteUrl={{siteUrl}}",
          "host": ["{{baseUrl}}"],
          "path": ["list-items"],
          "query": [
            { "key": "driveName", "value": "{{driveName}}" },
            { "key": "siteUrl", "value": "{{siteUrl}}" }
          ]
        }
      }
    },
    {
      "name": "Excel Read",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"siteUrl\": \"{{siteUrl}}\",\n  \"driveName\": \"{{driveName}}\",\n  \"itemName\": \"{{itemName}}\",\n  \"range\": \"{{sheetName}}!A1:D10\"\n}"
        },
        "url": "{{baseUrl}}/excel/read"
      }
    },
    {
      "name": "Excel Write",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"siteUrl\": \"{{siteUrl}}\",\n  \"driveName\": \"{{driveName}}\",\n  \"itemName\": \"{{itemName}}\",\n  \"range\": \"{{sheetName}}!A1:B2\",\n  \"values\": [[\"Date\", \"Amount\"],[\"2025-09-01\", 100]]\n}"
        },
        "url": "{{baseUrl}}/excel/write"
      }
    },
    {
      "name": "Excel Clear Range",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"siteUrl\": \"{{siteUrl}}\",\n  \"driveName\": \"{{driveName}}\",\n  \"itemName\": \"{{itemName}}\",\n  \"sheetName\": \"{{sheetName}}\",\n  \"range\": \"A1:B10\",\n  \"applyTo\": \"contents\"\n}"
        },
        "url": "{{baseUrl}}/excel/delete"
      }
    },
    {
      "name": "Excel Create Sheet",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"siteUrl\": \"{{siteUrl}}\",\n  \"driveName\": \"{{driveName}}\",\n  \"itemName\": \"{{itemName}}\",\n  \"name\": \"NewSheet\"\n}"
        },
        "url": "{{baseUrl}}/excel/create-sheet"
      }
    },
    {
      "name": "Excel Delete Sheet",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"siteUrl\": \"{{siteUrl}}\",\n  \"driveName\": \"{{driveName}}\",\n  \"itemName\": \"{{itemName}}\",\n  \"sheetName\": \"OldSheet\"\n}"
        },
        "url": "{{baseUrl}}/excel/delete-sheet"
      }
    }
  ]
}
